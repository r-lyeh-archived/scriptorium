interface InterB : InterA
{
    routine []( index: int ) => int 
}
interface InterB for int : InterA<int>
{
    routine []( index: int ) => int {
        return (self & (1<<index)) >> index;
    }   
}


@[test()]
var k = (InterB) 0x7ffeff;
var f: list<InterA> = { 678 }
f.append( k ) 

io.writeln( f, k[1] )
@[test()]
