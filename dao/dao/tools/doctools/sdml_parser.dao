routine random_string( n=1 )
{
	const alnum = '0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ';
	s = string(n){
		k = 62 * rand()
		return alnum[ k : k ]
	}
	return s;
}

const top_level = 1;

