	var quotebegin = '';
	var quoteend = '';
	var quotename1 = '';
	var quotename2 = '';
	var tokens : list<string> = {};

	var orderlist = ( '', '' );
	var unorderlist = ( '', '' );
	var listitem = ( '', '' );
	var empty_table = '';
	var BasicTagMap : map<string,tuple<string,string,string> > = {=>};
	var codeparser : map<string,SdmlCodeHL> = {=>};
	#var codeparser : map<string,class<SdmlCodeHL> > = {=>};

